# Configuración de la aplicación de Catequesis

# App
NODE_ENV=production
PORT=3001
HOSTNAME=0.0.0.0
BASE_URL=http://localhost:3001

# Auth
# Hash bcrypt de la contraseña del administrador (párroco)
# Generar con: npm run hash:admin
ADMIN_PASSWORD_HASH=$2b$12$reemplazaPorHashBCrypt

# JWT Secret para autenticación (CRÍTICO - cambiar en producción)
JWT_SECRET=cambia_esta_clave_larga_aleatoria_minimo_32_caracteres

# Servicios
# URL de Gotenberg para exportar PDF (CRÍTICO)
GOTENBERG_URL=http://gotenberg:3000

# Configuración opcional
# Modo de solo lectura (true para deshabilitar edición)
READ_ONLY=false

# Telemetría
NEXT_TELEMETRY_DISABLED=1

# Logging
LOG_LEVEL=info

# Security
SECURE_HEADERS=true